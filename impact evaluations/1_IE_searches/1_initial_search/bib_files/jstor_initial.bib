number = {3},
pages = {439--449},
publisher = {Akad{\'{e}}miai Kiad{\'{o}}},
title = {{Productivity and Water Use Efficiency of Wheat (Triticum aestivum) under Different Resource Conservation Techniques and Irrigation Regimes}},
url = {http://www.jstor.org/stable/24689417},
volume = {42},
year = {2014}
}
