keywords = {Bengaluru; India; Karnataka; aquifer characterization; community resource management; exploitation; groundwater abstraction; irrigation system; rural-urban comparison; semiarid region; urbanization},
title = {{Groundwater management institutions in the face of rapid urbanization – Results of a framed field experiment in Bengaluru, India}},
