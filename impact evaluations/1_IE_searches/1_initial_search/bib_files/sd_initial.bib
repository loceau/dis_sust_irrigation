journal = {Scientia Horticulturae},
keywords = { Drought, Partial root-zone drying, Senescence, Solanum tuberosum, Stay-green,Deficit irrigation},
pages = {202--209},
title = {{Chlorophyll concentration in leaves is an indicator of potato tuber yield in water-shortage conditions}},
