keywords = {Irrigation management; Trickle irrigation; Water use efficiency},
month = {jan},
pages = {36--52},
publisher = {ELSEVIER SCI LTD},
title = {{DIDAS - User-friendly software package for assisting drip irrigation design and scheduling}},
