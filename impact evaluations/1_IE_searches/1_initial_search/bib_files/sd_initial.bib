journal = {World Development},
keywords = {Ethiopia; Tanzania; agricultural technology; developing world; farming system; gender; productivity; smallholder; technology adoption},
title = {{Demand and supply constraints of credit in smallholder farming: Evidence from Ethiopia and Tanzania}},
type = {Article},
url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85135413569{\&}doi=10.1016{\%}2Fj.worlddev.2022.106033{\&}partnerID=40{\&}md5=b5e5056ed77b786ecdc5757c23919649},
