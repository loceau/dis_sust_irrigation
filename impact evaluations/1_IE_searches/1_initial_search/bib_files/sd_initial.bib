journal = {Agricultural Water Management},
keywords = { Groundwater pollution, Lysimeter, NLEAP computer program,Nitrate leaching},
number = {1},
pages = {1--12},
title = {{Estimating potential nitrate leaching in nitrogen fertilized and irrigated tomato using the computer model NLEAP}},
url = {https://www.sciencedirect.com/science/article/pii/S0378377401001172},
volume = {51},
