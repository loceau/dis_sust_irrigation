journal = {Environmental Impact Assessment Review},
keywords = { Efficiency gap, Greenhouse gas emission intensity, Nutrient use efficiency, Sustainability indicators,Sustainable intensification},
pages = {106697},
title = {{Setting sustainability targets for irrigated rice production and application of the Sustainable Rice Platform performance indicators}},
