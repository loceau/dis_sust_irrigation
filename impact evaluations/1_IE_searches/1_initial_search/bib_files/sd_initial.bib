issn = {1161-0301},
journal = {European Journal of Agronomy},
keywords = { Potential yield, Spatial variability, WOFOST, Water-limited yield,Temporal variability},
number = {3},
pages = {226--235},
title = {{Quantifying production potentials of winter wheat in the North China Plain}},
url = {https://www.sciencedirect.com/science/article/pii/S1161030105000973},
volume = {24},
year = {2006}
}
@article{WOS:000241115600005,
abstract = {Understanding the nature of soil infiltration properties is important
for a number of applications, including planning efficient irrigation
