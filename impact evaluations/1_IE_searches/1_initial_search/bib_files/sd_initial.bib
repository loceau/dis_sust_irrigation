keywords = { Comprehensive Agrarian Reform Program, Exponential, Land ownership, Land rental, Philippines, Rice, Technical efficiency,Half-normal},
pages = {371--378},
title = {{Impact of land ownership on productivity and efficiency of rice farmers: The case of the Philippines}},
