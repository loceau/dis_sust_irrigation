journal = {Agricultural Water Management},
keywords = { Floodwater, Groundwater quality, Managed aquifer recharge, Toxic elements,Groundwater recharge},
pages = {106659},
title = {{Groundwater quality concern for wider adaptability of novel modes of managed aquifer recharge (MAR) in the Ganges Basin, India}},
