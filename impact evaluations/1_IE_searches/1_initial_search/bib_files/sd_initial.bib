@article{ZHOU20111500,
abstract = {Caliciviridae, including norovirus, are considered important sources of human gastroenteritis. As leafy green vegetables are commonly consumed without additional processing, it is important to evaluate interventions to reduce the presence of human pathogens in these products. Feline calicivirus was used as a model for small round structured viruses on lettuce. The lettuce was inoculated by immersion to simulate contamination from irrigation or wash water. The inoculated lettuce was then exposed to electron beam irradiation at various dose levels to determine survival. The D10-value of the calicivirus on lettuce was determined to be 2.95 kGy. Irradiation to reduce bacterial pathogens on cut lettuce could also reduce the risk associated with small round structured viruses on lettuce. Received 14 March 2011 Accepted 21 April 2011 From a food safety perspective, noroviruses, members of the family Caliciviridae, are responsible for widespread foodborne illnesses. They have been classified in the highest priority group of foodborne pathogens, and they are considered the most common foodborne virus (8). In the United States, it is estimated that there are more than 20 million cases of norovirus-associated foodborne illness every year (13). Produce including spinach and lettuce could become contaminated with norovirus either during growth, from contaminated water, or during processing and serving, by infected food handlers. Because these leafy green vegetables are often consumed without any further processing, it is prudent to investigate interventions that may lessen the chance of human infection by these foods. In 2008, the U.S. Food and Drug Administration (FDA) issued a final rule on the use of irradiation for spinach and lettuce, stating, “ . . . FDA concludes that the proposed use of irradiation to treat iceberg lettuce and spinach with absorbed doses that will not exceed 4.0 kGy is safe” (18). The final rule was in response to three multistate outbreaks of Escherichia coli O157:H7 traced to spinach and lettuce (3). Although the focus of this final rule was on bacterial contamination, it is possible that irradiation at the approved dose levels could potentially affect enteric virus populations as well. Several researchers have studied the inactivation of caliciviruses (a.k.a., small round structured viruses [SRSVs]) on surfaces and on foods. Slomka and Appleton (14) and Duizer et al. (7) demonstrated obvious time and temperature relationships in the inactivation of these viruses in molluscan shellfish and in water. Gulati et al. (9) evaluated the effectiveness of three commonly used disinfectants on strawberries and lettuce inoculated with feline calicivirus. Ozone (16), UV irradiation (17), and gamma irradiation (2) have also been shown to have various destructive effects on viruses in water or on food surfaces. All of these technologies have advantages and disadvantages from a processing perspective, and each could be of value in a specific processing operation or food service system. Since noroviruses are significant causes of human gastroenteritis, with very low infectious doses and do not readily grow in cell culture, researchers have looked for a similar virus to use as a surrogate for laboratory studies. Slomka and Appleton (14) suggested the use of feline calicivirus (FCV) as a surrogate for Norwalk virus in their research on heat inactivation of the virus in molluscan shellfish. Other researchers, including Doultree et al. (6), Gulati et al. (9), Mattison et al. (11), Thurston-Enriquez et al. 16., 17., and Duizer et al. (7), have also used FCV as a surrogate for SRSVs with foods and food surfaces. More recently, murine norovirus has been used as a surrogate for human norovirus on lettuce (1). However, from a research perspective, FCV appears to be an adequate surrogate for norovirus and other small, round structured human enteric viruses. Although gamma irradiation has been shown to be effective in reducing the populations of caliciviruses in foods, there is currently nothing in the scientific literature documenting the effects of electron beam irradiation. Although the results of the different irradiation sources would be assumed to be similar, electron beam irradiation has advantages from a processing perspective, in part because of a higher product throughput at a given dose. A disadvantage of electron beam irradiation, in comparison with gamma irradiation, is that electron beam irradiation has a relatively small depth of penetration. The objective of this study was to determine the relationship between electron beam irradiation and the inactivation of norovirus on leafy green vegetables, in the context of the approval of irradiation as a decontamination strategy for lettuce and spinach.},
author = {Zhou, Fanghong and Harmon, Karen M and Yoon, Kyoung-Jin and Olson, Dennis G and Dickson, James S},
doi = {https://doi.org/10.4315/0362-028X.JFP-11-121},
issn = {0362-028X},
journal = {Journal of Food Protection},
number = {9},
pages = {1500--1503},
title = {{Inactivation of Feline Calicivirus as a Surrogate for Norovirus on Lettuce by Electron Beam Irradiation}},
url = {https://www.sciencedirect.com/science/article/pii/S0362028X22119757},
volume = {74},
year = {2011}
}
@article{BOLING201111,
abstract = {Yield constraint analysis using a combination of experiments and crop growth models has been useful for quantifying the relative role of yield-limiting factors, and for prioritizing management interventions aimed at increasing the yields of non-photoperiod-sensitive rice grown under rainfed conditions. The use of a systems approach for photoperiod-sensitive varieties is constrained by the lack of crop growth models that can simulate the varieties' photoperiod response. This study used data from the literature, from a controlled-growth experiment, and from multi-location field experiments to determine the photoperiod-sensitivity parameters of Jasmine rice grown in north-east Thailand, and incorporated these in the ORYZA2000 model. Next, the model was used to analyse yield gaps by comparing yields in farmers' fields with the simulated attainable yields with an adequate N supply (60kgha−1) under irrigated conditions. The ORYZA2000 model adequately simulated growth, development, and yield of Jasmine rice over a 0–150kgNha−1 range under irrigated and normal to above-normal rainfall conditions. The simulated attainable yields ranged from 3.47 to 5.96Mgha−1. A simulated yield gap of 1.76Mgha−1 (41{\%}) currently exists in rainfed rice farmers' fields. Yield gaps could be substantially reduced by 1.48Mgha−1 (34{\%}) through improved N-management practices. The yield gap caused by water limitation was small (0.02Mgha−1, {\textless}1{\%}) during the study period, when rainfall was normal to above normal. The large yield gap beyond the farmers' current fertilizer level suggests considerable scope for increasing yields through site- and time-specific nutrient management. A long-term simulation study including years with rainfall below normal is needed to comprehensively quantify yield gaps caused by water limitation. Such long-term simulation is hindered by the lack of long-term groundwater depth measurements.},
author = {Boling, A A and Bouman, B A M and Tuong, T P and Konboon, Y and Harnpichitvitaya, D},
doi = {https://doi.org/10.1016/j.njas.2010.05.001},
issn = {1573-5214},
journal = {NJAS - Wageningen Journal of Life Sciences},
keywords = { Nutrient stress, ORYZA2000 model, Production constraints, Yield loss,Drought},
number = {1},
pages = {11--19},
title = {{Yield gap analysis and the effect of nitrogen and water on photoperiod-sensitive Jasmine rice in north-east Thailand}},
url = {https://www.sciencedirect.com/science/article/pii/S1573521410000175},
volume = {58},
year = {2011}
}
@article{ABDELKAWY201199,
abstract = {The aims of this study are: (1) producing a geometrically corrected physiographic-soil map scale 1:50,000 reduced to the attached map; (2) detecting some soil characteristics as (effective soil depth, salinity and alkalinity) of the investigated area during the last 28years to produce the soil resilience maps. To fulfill the first aim, eight soil profiles were selected from 30 profiles to represent the different mapping units. Morphological description was carried out and soil samples were collected for physical and chemical analyses. Based on ETM+ images and the geographic information system, coupled with the field work and laboratory analysis data, the physiographic-soil map was produced. The following main landscape units can be identified: (1) coastal plain (the fluvio-marine deposits) and (2) young sub-deltaic deposits. With respect to the second aim except some environmental processes which occur without human interference, the soil resilience resulted when soils are used and managed in the right way. Land use and management have a direct effect on soil resilience. It can decrease soil degradation and increase soil restoration and accordingly increase soil resilience. The main types of human activities included soil resilience in the investigated area are soil resilience against salinization, soil resilience against alkalinization and soil resilience against water logging. The human action on soil resilience could be recognized through the man-action as good and proper land management, introducing proper land modern irrigation and drainage styles, in addition to adequate fertilizing programs.},
