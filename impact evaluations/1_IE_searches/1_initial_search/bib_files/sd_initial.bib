keywords = {Rural poverty; Burkina Faso; Agricultural households; Economic policies; Model; Mathematical programming},
month = {jul},
pages = {1--9},
publisher = {ELSEVIER SCI LTD},
title = {{Public policies for rural poverty alleviation: The case of agricultural households in the Plateau Central area of Burkina Faso}},
