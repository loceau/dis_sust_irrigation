journal = {Ecological Economics},
keywords = { Agro-ecological indicators, Arable farms, Cross-compliance, MP (Mathematical Programming) model,CAP mid-term review},
number = {5},
pages = {1408--1416},
title = {{Economic and environmental impact of the CAP mid-term review on arable crop farming in South-western France}},
