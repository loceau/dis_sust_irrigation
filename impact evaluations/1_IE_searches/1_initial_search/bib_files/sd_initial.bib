journal = {AGRICULTURE ECOSYSTEMS {\&} ENVIRONMENT},
keywords = {grapevines; water stress; water-use efficiency; irrigation scheduling; physiological indicators; sap flow; remote sensing; reflectance indices; chlorophyll fluorescence; infrared thermometry; linear transducers of displacement},
month = {apr},
number = {2-3, SI},
