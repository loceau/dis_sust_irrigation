issn = {0378-3774},
journal = {Agricultural Water Management},
keywords = { Evapotranspiration, NDVI, Soil moisture sensor, Turfgrass water response function, Urban irrigation, Water conservation,Weather-based irrigation controller},
pages = {106586},
title = {{Developing irrigation water conservation strategies for hybrid bermudagrass using an evapotranspiration-based smart irrigation controller in inland southern California}},
