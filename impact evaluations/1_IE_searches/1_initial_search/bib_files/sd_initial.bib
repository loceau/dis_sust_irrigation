keywords = {soil water balance; crop water requirements; weather generator; water resource planning; crop coefficient; energy use},
number = {8},
pages = {1371--1388},
publisher = {ELSEVIER SCI LTD},
title = {{California Simulation of Evapotranspiration of Applied Water and Agricultural Energy Use in California}},
