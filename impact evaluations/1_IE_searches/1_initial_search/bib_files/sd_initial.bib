author = {Chavez, M D and Berentsen, P B M and Lansink, A G J M Oude},
doi = {10.1016/j.agsy.2014.03.009},
issn = {0308-521X},
journal = {AGRICULTURAL SYSTEMS},
keywords = {Tobacco diversification; Soil degradation; Quadratic risk programming; Income risk; Risk aversion},
month = {jun},
pages = {35--43},
publisher = {ELSEVIER SCI LTD},
title = {{Analyzing diversification possibilities on specialized tobacco farms in Argentina using a bio-economic farm model}},
type = {Article},
volume = {128},
year = {2014}
}
@article{WOS:000341348400003,
abstract = {We present two mathematical models that consider the physical and
chemical site-specific management zones within the parcels. Indeed, the
spatial variability of these properties directly impacts the
agricultural production planning. The first model is for the crop
planning problem. At the beginning of the production cycle, it assesses
the chemical and physical management zones to determine the optimal crop
pattern for maximizing the farmer's expected profit. The second model is
a real-time irrigation method that takes the solution of the crop
planning problem as input. Then, at each irrigation period, it considers
the physical management zones and the humidity level of each parcel to
determine in real-time the optimal amount of water for each crop
irrigation. This is especially important in regions where droughts are
frequent. We empirically show that our methodologies are efficient on
instances based on real data. (C) 2014 Elsevier B.V. All rights
