doi = {https://doi.org/10.1016/j.scitotenv.2020.142175},
issn = {0048-9697},
journal = {Science of The Total Environment},
keywords = { , Dietary intake, Exposure risk assessment, Persistent organic pollutant, Plant contamination,Water and soil pollution},
pages = {142175},
title = {{Occurrence of organic micropollutants and human health risk assessment based on consumption of Amaranthus viridis, Kinshasa in the Democratic Republic of the Congo}},
