journal = {International Journal of Educational Development},
keywords = { Green revolution, Land-grant universities, US-India cooperation,India's agricultural history},
pages = {58--70},
title = {{US Land-Grant Universities in India: Assessing the consequences of agricultural partnership, 1952–1972}},
