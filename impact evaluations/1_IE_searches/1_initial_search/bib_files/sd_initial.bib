journal = {Journal of Cleaner Production},
keywords = { Dual-interval, Irrigation, Monte Carlo simulation, Uncertainty assessment, Water allocation,Crop planning},
pages = {945--967},
title = {{Assessment of uncertainty effects on crop planning and irrigation water supply using a Monte Carlo simulation based dual-interval stochastic programming method}},
url = {https://www.sciencedirect.com/science/article/pii/S0959652617303141},
volume = {149},
