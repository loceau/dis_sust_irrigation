doi = {https://doi.org/10.1016/j.indcrop.2018.01.002},
issn = {0926-6690},
journal = {Industrial Crops and Products},
keywords = { Castor, Core set, Germplasm, Resistance, Ricinoleic acid,Biotic stress},
pages = {766--774},
title = {{Trait-specific accessions in global castor (Ricinus communis L.) germplasm core set for utilization in castor improvement}},
url = {https://www.sciencedirect.com/science/article/pii/S0926669018300025},
volume = {112},
