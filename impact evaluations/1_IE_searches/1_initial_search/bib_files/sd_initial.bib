keywords = { Food-security, Irrigation, Livelihoods, Support-systems,Land reform},
pages = {13--19},
title = {{Difficult roads leading to beautiful destinations? Articulating land Reform's contribution to rural livelihoods in the Limpopo Province, South Africa}},
url = {https://www.sciencedirect.com/science/article/pii/S1474706517300293},
volume = {111},
year = {2019}
}
