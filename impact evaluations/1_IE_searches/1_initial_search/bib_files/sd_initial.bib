editor = {Shit, Pravat and Bhunia, Gouri and Adhikary, Partha},
isbn = {978-0-323-99963-2},
keywords = { AHP multicriteria analysis, Irrigational suitability zones, Irrigational water quality,Groundwater chemistry},
pages = {151--171},
publisher = {Elsevier},
title = {{Chapter 9 - Integrated GIS-based MCDA approach for suitability zoning of irrigation water quality in semiarid Kansai river basin, Purulia district, West Bengal}},
url = {https://www.sciencedirect.com/science/article/pii/B9780323999632000109},
