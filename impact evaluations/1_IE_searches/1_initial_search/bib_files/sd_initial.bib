journal = {International Journal of Food Microbiology},
keywords = { Climatological conditions, Good agricultural practices, Leafy greens, QMRA, Seasonal variations,Quantitative microbial risk analysis},
pages = {238--246},
title = {{Quantitative contamination assessment of Escherichia coli in baby spinach primary production in Spain: Effects of weather conditions and agricultural practices}},
url = {https://www.sciencedirect.com/science/article/pii/S0168160517302969},
volume = {257},
