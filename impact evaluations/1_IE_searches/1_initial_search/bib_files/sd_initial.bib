doi = {https://doi.org/10.1016/j.sjbs.2022.02.049},
issn = {1319-562X},
journal = {Saudi Journal of Biological Sciences},
keywords = { Breeding, Diallel cross, Enhanced parents, Rice grain quality,Combining ability},
title = {{Assessment of grain quality traits in rice under normal and water deficit condition}},
