keywords = { Adaptation, Drought, Environmental perception, Livelihood, Nyangatom,Arid and semi-arid lands},
pages = {104485},
title = {{How do agro-pastoralists cope with climate change? The case of the Nyangatom in the Lower Omo Valley of Ethiopia}},
url = {https://www.sciencedirect.com/science/article/pii/S0140196321000513},
volume = {189},
year = {2021}
}
@incollection{MOYSIADIS2021175,
abstract = {Smart farming based on Internet of Things (IoT) technologies enables crop farmers to collect real-time data related to irrigation and plant protection processes, aiming to increase production volume and improve product quality, predict diseases, while optimizing resources and farming processes. Digital Ecosystem Utilisation (in short CYSLOP) is a use case of the Internet of Food and Farm 2020 (IoF2020) project that aims to demonstrate IoT solutions in vegetable farms in Cyprus and Slovenia. More particularly, this chapter is focused on the pilots taking place in Cyprus. The use case objectives are (i) to drive IoT uptake in countries where IoF2020 was not initially present, (ii) to prove the sustainability of those IoT interventions cost-wise and environmentally wise, and (iii) to unveil their potential for postfarm and/or consumer-oriented applications. In this chapter, however, the writers concentrate on (a) studying the current state of the art in IoT in agriculture, their applications and implications, (b) analyzing the prospects and problems of smart farming through a case study of installation of IoT devices in Cyprus, under the IoF2020 project, (c) discussing business models associated with smart farming proposed solutions, and (d) presenting technical approaches to expand multivendor IoT offerings, regionally. The selected pilot areas are located in the mountainous Limassol district where the cultivations under study are aronia, goji berries, and raspberries (four plots), and in coastal Ammochostos district with two plots of open-field strawberries and cherry tomatoes (under hydroponic cultivation). The expected environmental, economic, and social impacts involve efficiency improvement in terms of pesticide and water use reduction between 5{\%} and 10{\%}, respective cost reduction of 10{\%}, reduction of farm visits by 20{\%}, and more than 20 newly deployed IoT devices. Lastly, by incorporating innovative traceability technology, this use case is among the first to integrate information from the entire food value chain (from farm to fork) to a marketplace, offering elaborate value propositions to users. The aim of this work is to guide the reader through the multidisciplinary approach needed for a successful IoT agrifood project execution, to unveil the complex technical, business, and support relationships that these inherit, and to pave a way to make it a sustainable and replicable case for the digital transformation of the local sector.},
author = {Moysiadis, Theocharis and Adamides, George and Stylianou, Andreas and Zotos, Nikolaos and Giannakopoulou, Marianthi and Alexiou, George},
booktitle = {Bio-Economy and Agri-production},
