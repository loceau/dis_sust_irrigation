keywords = {Malaysia; alternative agriculture; food policy; food production; food security; food supply; sustainability; technical efficiency},
title = {{Assessing rice production efficiency for food security policy planning in Malaysia: A non-parametric bootstrap data envelopment analysis approach}},
type = {Article},
