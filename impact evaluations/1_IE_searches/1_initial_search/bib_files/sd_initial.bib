keywords = {Soil properties; Crop planning; Real-time irrigation; Linear programming},
month = {sep},
pages = {20--28},
publisher = {ELSEVIER SCI LTD},
title = {{A crop planning and real-time irrigation method based on site-specific management zones and linear programming}},
