author = {Alaerts, G J},
doi = {10.1016/j.worlddev.2020.104880},
journal = {World Development},
keywords = {Indonesia; adaptive management; irrigation system; participatory approach; policy implementation; policy reform; valuation; water management; water planning},
title = {{Adaptive policy implementation: Process and impact of Indonesia's national irrigation reform 1999–2018}},
type = {Article},
url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85077999921{\&}doi=10.1016{\%}2Fj.worlddev.2020.104880{\&}partnerID=40{\&}md5=c2920240e3dd197a152250a21757db00},
