doi = {https://doi.org/10.1016/j.pce.2006.08.020},
issn = {1474-7065},
journal = {Physics and Chemistry of the Earth, Parts A/B/C},
keywords = { Drip kits, Intervention targeting, Sustainable intervention, Water availability,Access to water},
number = {15},
pages = {885--892},
title = {{Impact and sustainability of low-head drip irrigation kits, in the semi-arid Gwanda and Beitbridge Districts, Mzingwane Catchment, Limpopo Basin, Zimbabwe}},
