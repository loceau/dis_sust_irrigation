journal = {Agricultural Water Management},
keywords = { Irrigation, Nonlinear Model Predictive Control (NMPC), Nonlinear optimization, Polder, Salinity, Water quality control,Groundwater exfiltration},
pages = {107502},
title = {{Nonlinear model predictive control of salinity and water level in polder networks: Case study of Lissertocht catchment}},
url = {https://www.sciencedirect.com/science/article/pii/S037837742200049X},
volume = {264},
year = {2022}
}
@incollection{FITZGERALD20221,
