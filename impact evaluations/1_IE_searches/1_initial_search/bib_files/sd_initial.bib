keywords = { Adaptation, Crop traits, FACE, Field pea, Grain quality, Lentil, Pests, Wheat,Climate change},
pages = {1--73},
publisher = {Academic Press},
series = {Advances in Agronomy},
title = {{Chapter One - Elevated CO2 in semi-arid cropping systems: A synthesis of research from the Australian Grains Free Air CO2 Enrichment (AGFACE) research program}},
