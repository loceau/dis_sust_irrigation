keywords = { Artificial grassland, Double-ring infiltrometer, Semi-arid area, Soil infiltration rate,Root morphological characteristics},
pages = {106153},
title = {{Root morphological characteristics and soil water infiltration capacity in semi-arid artificial grassland soils}},
url = {https://www.sciencedirect.com/science/article/pii/S0378377420302067},
volume = {235},
year = {2020}
}
@article{YU2020110828,
