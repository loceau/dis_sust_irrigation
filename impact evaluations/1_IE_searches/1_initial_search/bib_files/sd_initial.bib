author = {Salazar-Ledesma, M and Prado, B and Zamora, O and Siebe, C},
doi = {10.1016/j.agee.2017.12.018},
issn = {0167-8809},
journal = {AGRICULTURE ECOSYSTEMS {\&} ENVIRONMENT},
keywords = {Soil organic matter; Clays; Sorption; Degradation; Pesticide mobility; Groundwater contamination},
month = {mar},
