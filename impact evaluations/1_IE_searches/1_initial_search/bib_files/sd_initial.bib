keywords = { Disinfection, Microbial indicators, Primary production, Water treatment,Food safety},
pages = {140--147},
title = {{Ultrasound treatments improve the microbiological quality of water reservoirs used for the irrigation of fresh produce}},
url = {https://www.sciencedirect.com/science/article/pii/S0963996915300260},
volume = {75},
year = {2015}
}
