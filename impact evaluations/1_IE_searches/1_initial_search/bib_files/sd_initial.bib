doi = {https://doi.org/10.1016/j.agwat.2013.11.008},
issn = {0378-3774},
journal = {Agricultural Water Management},
keywords = { Net income, Soluble solids, Water deficit, Water productivity,Tomato},
pages = {92--103},
title = {{The response of processing tomato to deficit irrigation at various phenological stages in a sub-humid environment}},
url = {https://www.sciencedirect.com/science/article/pii/S0378377413003235},
volume = {133},
year = {2014}
}
