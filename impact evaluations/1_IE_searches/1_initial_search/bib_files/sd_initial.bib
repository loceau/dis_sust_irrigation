issn = {0045-6535},
journal = {Chemosphere},
keywords = { Clothianidin, Crimson clover, Edge-of-field buffer, Leaching, Prairie strips, Runoff, Wildflowers,Thiamethoxam},
pages = {138154},
title = {{Evaluating neonicotinoid insecticide uptake by plants used as buffers and cover crops}},
