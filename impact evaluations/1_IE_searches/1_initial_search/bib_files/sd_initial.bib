pages = {249--250},
publisher = {Elsevier},
series = {Developments in Earth Surface Processes},
title = {{27 Changing climates, changing lives: strengthening adaptive response capacities to climate change in the Huascar{\'{a}}n Biosphere Reserve, Peru, and Sagarmatha (Mt. Everest) National Park, Nepal}},
