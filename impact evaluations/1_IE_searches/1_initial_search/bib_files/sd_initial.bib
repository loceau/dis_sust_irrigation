author = {Gathala, Mahesh K and Kumar, Virender and Sharma, P C and Saharawat, Yashpal S and Jat, H S and Singh, Mainpal and Kumar, Amit and Jat, M L and Humphreys, E and Sharma, D K and Sharma, Sheetal and Ladha, J K},
doi = {10.1016/j.agee.2013.06.002},
issn = {0167-8809},
journal = {AGRICULTURE ECOSYSTEMS {\&} ENVIRONMENT},
keywords = {Cropping system; Indo-Gangetic Plains; Conservation agriculture; Rice; Wheat Best management practices},
month = {sep},
pages = {85--97},
publisher = {ELSEVIER},
title = {{Optimizing intensive cereal-based cropping systems addressing current and future drivers of agricultural change in the northwestern Indo-Gangetic Plains of India}},
