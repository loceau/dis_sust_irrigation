keywords = {Spatial variability; Geochemical simulation; Sodic water; PHREEQC},
month = {feb},
pages = {301--312},
publisher = {ELSEVIER SCI LTD},
title = {{The combination of geostatistics and geochemical simulation for the site-specific management of soil salinity and sodicity}},
