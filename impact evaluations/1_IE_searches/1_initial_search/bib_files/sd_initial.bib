issn = {0301-4797},
journal = {Journal of Environmental Management},
keywords = { Agriculture, Climate resilience, Disadvantaged communities, Equitable water management, Multibenefit land repurposing, Public participation,Groundwater},
pages = {117226},
title = {{From fallow ground to common ground: Perspectives on future land uses in the San Joaquin valley under sustainable groundwater management}},
