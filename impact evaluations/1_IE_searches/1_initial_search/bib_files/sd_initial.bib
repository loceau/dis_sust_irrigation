keywords = { Crop production, Selenium, Subsurface drainage, Water policy, Waterlogging,Arid areas},
pages = {31--38},
title = {{Achieving sustainable irrigation requires effective management of salts, soil salinity, and shallow groundwater}},
url = {https://www.sciencedirect.com/science/article/pii/S0378377414002558},
volume = {157},
year = {2015}
}
