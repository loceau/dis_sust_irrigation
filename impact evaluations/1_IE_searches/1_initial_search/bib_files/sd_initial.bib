journal = {Environmental Modelling {\&} Software},
keywords = { Mathematical, Optimisation, PMP, Water policy,Economic models},
pages = {98--106},
title = {{A biophysical and economic model of agriculture and water in the Murray-Darling Basin, Australia}},
