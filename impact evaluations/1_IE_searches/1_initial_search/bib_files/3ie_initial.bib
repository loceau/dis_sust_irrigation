journal = {China Agricultural Economic Review},
keywords = {Agricultural Economics,Asia,CC200,Commonwealth of Nations,Developing Countries,EE110,EE115,Extension and Advisory Work,FF005,FF100,Field Crops,Least Developed Countries,Natural Resource Economics,Oryza,Oryza sativa,Plant Production,Poaceae,Poales,Social Psychology and Social Anthropology,South Asia,Spermatophyta,UU485,angiosperms,commelinids,environmental effects,eukaryotes,monocotyledons,paddy,plants,socioeconomic aspects},
number = {3},
pages = {527--552},
title = {{How does farmers' field schooling impact eco-efficiency? Empirical evidence from paddy farmers in Bangladesh}},
