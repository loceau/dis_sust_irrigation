journal = {Water},
keywords = {ACP Countries,Africa,Africa South of Sahara,Anglophone Africa,Commonwealth of Nations,Demand and Prices,Developing Countries,EE130,East Africa,JJ800,Least Developed Countries,PP200,Soil Water Management (Irrigation and Drainage),Supply,Techniques and Methodology,Water Resources,ZZ900},
