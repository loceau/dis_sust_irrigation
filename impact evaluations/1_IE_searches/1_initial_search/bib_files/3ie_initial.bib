doi = {10.1515/bejeap-2013-0091},
journal = {B.E. Journal of Economic Analysis {\&} Policy},
keywords = {Chronic And Transient Poverty,Household Welfare,Large-Scale Irrigation Infrastructure,Lotteries,Monthly Panel Data,Poverty Reduction,Role Of Infrastructure},
