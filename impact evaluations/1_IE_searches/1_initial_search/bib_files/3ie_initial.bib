keywords = {AWD technology,Bangladesh,Irrigation,Rice,Sustainable agriculture,Sustainable water management},
number = {October 2019},
pages = {104430},
publisher = {Elsevier},
title = {{Adoption of alternate wetting and drying (AWD) irrigation as a water-saving technology in Bangladesh: Economic and environmental considerations}},
url = {https://doi.org/10.1016/j.landusepol.2019.104430},
volume = {91},
year = {2020}
}
